<div class="row">
  <div class="col-auto text-white bg-dark rounded p-3">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-4 text-white bg-secondary p-3">
    <h3>Create a new blog post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <br>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-body">Post:</label>
        <br>
        <textarea class="form-input" id="blog-body" name="blog-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-dark">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 p-3 blog-list bg-blogs">
    <h3 class="text-secondary">Current Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogs/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4" id="inc-delete">
        {{!-- <button class="btn btn-sm btn-warning" id="edit-btn" data-id="{{blog.id}}"><i
            class="fa fa-edit"></i></button> --}}
        <button class="btn btn-sm btn-danger" id="delete-btn" data-id="{{blog.id}}"><i class="fa fa-trash"></i></button>
      </div>
      {{!-- <div class="col-md-4" id="inc-edit">
        <button class="btn btn-sm btn-warning" id="edit-btn" data-id="{{blog.id}}"><i
            class="fa fa-edit"></i></button>
      </div> --}}
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>